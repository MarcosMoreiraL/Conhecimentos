<Window x:Class="FinanceiroApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinanceiroApp"
        mc:Ignorable="d"
        Title="Login" Height="398" Width="400">
    <Grid>
        <TextBlock Text="Programa Controle Financeiro" FontWeight="Bold" FontSize="25" HorizontalAlignment="Center" Margin="0,10,0,0" Height="48" VerticalAlignment="Top"/>
        <TextBlock Text="Nome de Usuário" FontSize="15" Margin="10,63,0,0" HorizontalAlignment="Left" Height="27" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUsuario" HorizontalAlignment="Center" Margin="0,95,0,0" Width="380" Height="28" VerticalAlignment="Top"/>

        <TextBlock Text="Senha" FontSize="15" Margin="10,128,0,0" HorizontalAlignment="Left" Height="27" VerticalAlignment="Top"/>
        <TextBox x:Name="txtSenha" HorizontalAlignment="Center" Margin="0,160,0,0" Width="380" Height="28" VerticalAlignment="Top"/>

        <Button Name="btnLogin" Content="Login" FontSize="15" HorizontalAlignment="Center" Height="52" Margin="0,296,0,0" Width="150" Click="btnLogin_Click" VerticalAlignment="Top" />
    </Grid>
</Window>
