<Window x:Class="FinanceiroApp.WPF.Views.Main.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinanceiroApp.WPF.Views.Main"
        xmlns:vm="clr-namespace:FinanceiroApp.WPF.ViewModel"
        xmlns:transactions="clr-namespace:FinanceiroApp.WPF.Views.Transactions"
        xmlns:wallets="clr-namespace:FinanceiroApp.WPF.Views.Wallets"
        mc:Ignorable="d"
        x:Name="window" Title="Dashboard" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <vm:DashboardViewModel x:Key="vm"/>
    </Window.Resources>
    <DockPanel x:Name="dp" DataContext="{StaticResource vm}">
        <Menu DockPanel.Dock="Top">
            <MenuItem x:Name="editUserMenuItem" Header="Editar Perfil"/>
            <MenuItem x:Name="categoryMenuItem" Header="Categorias" Click="categoryMenuItem_Click"/>
        </Menu>
        <wallets:Wallets x:Name="wallets" DockPanel.Dock="Left"/>
        <transactions:Transactions x:Name="transactions" DockPanel.Dock="Right"/>
    </DockPanel>
</Window>
