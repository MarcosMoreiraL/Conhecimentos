<UserControl x:Class="FinanceiroApp.WPF.Views.Transactions.Transactions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinanceiroApp.WPF.Views.Transactions"
             xmlns:vm="clr-namespace:FinanceiroApp.WPF.ViewModel.Transactions"
             mc:Ignorable="d" 
             d:Height="450" Width="650">
    <UserControl.Resources>
        <vm:TransactionsViewModel x:Key="vm"/>
    </UserControl.Resources>
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="btnNewTransaction" Content="Nova Transação" Width="100" Click="btnNewTransaction_Click"/>
            </StackPanel>
        </Grid>
        <Grid DockPanel.Dock="Bottom">
            <ListView x:Name="lvTransactions" Width="650" BorderThickness="0"/>
        </Grid>
    </DockPanel>
</UserControl>
