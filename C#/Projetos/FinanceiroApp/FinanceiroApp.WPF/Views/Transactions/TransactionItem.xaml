<UserControl x:Class="FinanceiroApp.WPF.Views.Transactions.TransactionItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinanceiroApp.WPF.Views.Transactions"
             xmlns:vm="clr-namespace:FinanceiroApp.WPF.ViewModel.Transactions"
             mc:Ignorable="d" 
             Height="50" Width="600" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <vm:TransactionItemViewModel x:Key="vm"/>
    </UserControl.Resources>
    <Grid DataContext="{StaticResource vm}">
        <StackPanel Orientation="Horizontal">
            <TextBlock x:Name="txtDescricao" Text="{Binding Transaction.Description}" Width="200" TextAlignment="Center" FontSize="20"/>
            <TextBlock x:Name="txtValor" Text="{Binding Transaction.Value, StringFormat=C2}" Width="150" TextAlignment="Center" FontSize="20"/>
            <TextBlock x:Name="txtData" Text="{Binding Transaction.DateString}" Width="150" TextAlignment="Center" FontSize="20"/>
            <Button x:Name="btnEditar" Content="Editar" Width="50" Click="btnEditar_Click"/>
            <Button x:Name="btnExcluir" Content="Excluir" Width="50" Command="{Binding DeleteTransactionCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
