<UserControl x:Class="FinanceiroApp.WPF.Views.Wallets.Wallets"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FinanceiroApp.WPF.Views.Wallets"
             xmlns:vm="clr-namespace:FinanceiroApp.WPF.ViewModel.Wallets"
             mc:Ignorable="d" 
             MinWidth="150" d:DesignHeight="600">
    <UserControl.Resources>
        <vm:WalletsViewModel x:Key="vm"/>
    </UserControl.Resources>
    <StackPanel x:Name="SpWallet" DataContext="{StaticResource vm}">
        <Button x:Name="btnNewWallet" Content="Nova Carteira" Click="btnNewWallet_Click" Background="LightGreen"/>
        <ListView x:Name="lvWallets" MinWidth="150" ItemsSource="{Binding Wallets}" BorderThickness="0" SelectionChanged="lvWallets_SelectionChanged" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
    </StackPanel>
</UserControl>
