<Window x:Class="FinanceiroApp.WPF.Views.Wallets.WalletRegister"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinanceiroApp.WPF.Views.Wallets"
        xmlns:vm="clr-namespace:FinanceiroApp.WPF.ViewModel.Wallets"
        mc:Ignorable="d"
        Title="WalletRegister" Height="250" Width="400">
    <Window.Resources>
        <ResourceDictionary>
            <vm:WalletRegisterViewModel x:Key="vm"/>
        </ResourceDictionary>
    </Window.Resources>
    <Grid DataContext="{StaticResource vm}">
        <TextBlock x:Name="txtTitle" Text="Nova Carteira" TextAlignment="Center" FontWeight="Bold" FontSize="23" HorizontalAlignment="Center" Margin="0,22,0,0" Height="36" VerticalAlignment="Top" Width="380"/>
        <StackPanel Orientation="Vertical" Margin="0,63,0,81">
            <TextBlock x:Name="txtErrors" FontSize="15" Foreground="Red" TextAlignment="Center" Visibility="Collapsed" HorizontalAlignment="Center" Height="27" VerticalAlignment="Top" Width="380"/>

            <TextBlock Text="Descrição" FontSize="15" HorizontalAlignment="Left" Height="27" VerticalAlignment="Top"/>
            <TextBox x:Name="txtDescription" Text="{Binding Wallet.Description, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" HorizontalAlignment="Center" Width="380" Height="28" VerticalAlignment="Top"/>
        </StackPanel>
        <Button x:Name="btnSaveWallet" Command="{Binding Command}" Content="Salvar" FontSize="15" HorizontalAlignment="Center" Width="150" Margin="0,172,0,0" Height="52" VerticalAlignment="Top" />
    </Grid>
</Window>
