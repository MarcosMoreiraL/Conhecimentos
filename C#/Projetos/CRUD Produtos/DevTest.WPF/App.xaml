<Application x:Class="DevTest.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             
             xmlns:viewModels="clr-namespace:DevTest.WPF.ViewModels"
             xmlns:views="clr-namespace:DevTest.WPF.Views"
             xmlns:local="clr-namespace:DevTest.WPF">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Common.xaml"/>
                <ResourceDictionary Source="/Styles/NavigationBar.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewModels:RegisterViewModel}">
                <views:RegisterView/>
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type viewModels:ConsultViewModel}">
                <views:ConsultView/>
            </DataTemplate>
            
        </ResourceDictionary>
        
    </Application.Resources>
</Application>
